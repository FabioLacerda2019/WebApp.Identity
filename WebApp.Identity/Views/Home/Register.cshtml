@model WebApp.Identity.Models.RegisterModel
@using Newtonsoft.Json

@{
    ViewData["Title"] = "Register";
}


<div class="row justify-content-center">
   <div class="col-md-4">
    <h5>Cadastre o seu usuário</h5><hr>
    <form asp-action="Register">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
          <h6>Email</h6>
          <input asp-for="UserName" class="form-control" />
          <span asp-validation-for="UserName" class="text-danger"></span>
      </div>
      <div class="form-group">
          <h6>Senha</h6>
          <input asp-for="Password" class="form-control" />
          <span asp-validation-for="Password" class="text-danger"></span>
      </div>
      <div class="form-group">
          <h6>Confirma Senha</h6>
          <input asp-for="ConfirmPassword" class="form-control" />
          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
      </div>
      <div class="form-group">
	      <input type="submit" value="Cadastrar-se" class="btn btn-dark mr-4" />
		  <a asp-controller="Home" asp-action="Login" class="btn btn-dark">Entrar</a>
	  </div>
	 <h6 style="color: #176303;">@ViewData["SuccessMessage"]</h6>
     </form>
    <a asp-controller="Home" asp-action="ForgotPassword" style="color: #343a40;">Esqueceu a senha? Clique aqui!</a>
  </div>
   
</div>





